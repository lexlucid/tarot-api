<div class="relative">
  <!-- Animated circles -->
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="circle-container">
      {[1, 2, 3].map((_, i) => (
        <div class={`spinning-circle circle-${i + 1}`} />
      ))}
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center mb-16">
    <h1 class="text-5xl font-mystical text-mystic-gold mb-6">ðŸ”® Arcana API</h1>
    <p class="text-xl text-gray-400">Unlock the mysteries of the tarot through our powerful API</p>
  </div>
</div>

<style>
  .circle-container {
    position: relative;
    width: 300px;
    height: 300px;
  }

  .spinning-circle {
    position: absolute;
    border: 2px solid rgba(255, 215, 0, 0.15);
    border-radius: 50%;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .circle-1 {
    animation: spin 12s linear infinite;
  }

  .circle-2 {
    width: 80%;
    height: 80%;
    border-color: rgba(139, 69, 19, 0.15);
    animation: spin 8s linear infinite reverse;
  }

  .circle-3 {
    width: 60%;
    height: 60%;
    border-color: rgba(255, 215, 0, 0.2);
    animation: spin 6s linear infinite;
  }

  @keyframes spin {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  /* Add sparkle effect */
  .spinning-circle::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 215, 0, 0.8);
    border-radius: 50%;
    top: -2px;
    left: 50%;
    box-shadow: 0 0 4px rgba(255, 215, 0, 0.6);
    animation: sparkle 2s ease-in-out infinite;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 1; }
  }
</style>